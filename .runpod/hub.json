{
  "title": "ComfyUI RunPod Template",
  "description": "ComfyUI exposed on port 8188, auto-update of ComfyUI and ComfyUI-Manager at every startup. Based on CUDA 12.8+.",
  "type": "serverless",
  "category": "image",
  "iconUrl": "",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 20,
    "gpuCount": 1,
    "allowedCudaVersions": ["12.8", "12.7", "12.6"],
    "env": [
      {
        "key": "COMFY_PORT",
        "value": "8188",
        "description": "HTTP port for ComfyUI",
        "required": false
      },
      {
        "key": "COMFY_ARGS",
        "value": "--listen 0.0.0.0 --port 8188",
        "description": "Extra arguments passed to ComfyUI",
        "required": false
      },
      {
        "key": "AUTO_UPDATE",
        "value": "1",
        "description": "If 1, update ComfyUI and ComfyUI-Manager at startup",
        "required": false
      }
    ],
    "presets": [
      {
        "name": "Default (auto-update)",
        "env": {
          "AUTO_UPDATE": "1",
          "COMFY_PORT": "8188",
          "COMFY_ARGS": "--listen 0.0.0.0 --port 8188"
        }
      }
    ]
  }
}
